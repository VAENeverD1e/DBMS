# Server
PORT=4000

# Aiven MySQL credentials
DB_HOST=your-db-host-here
DB_PORT=27755
DB_USER=your-db-user-here
DB_PASSWORD=your-db-password-here
DB_NAME=your-db-name-here

# Path to the Aiven CA certificate relative to Backend/src
# If you place the CA at Backend/certs/ca.pem, use:
DB_SSL_CA=../certs/ca.pem

# Session secret for Flask sessions
SESSION_SECRET=your-secret-key-here

# Jamendo API Configuration
JAMENDO_API_BASEURL=https://api.jamendo.com/v3.0
JAMENDO_CLIENT_ID=your-jamendo-client-id-here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
AWS_S3_BUCKET_NAME=your-s3-bucket-name-here
AWS_S3_REGION=ap-southeast-2